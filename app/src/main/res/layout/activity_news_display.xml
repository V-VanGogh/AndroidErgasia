<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewsDisplayActivity">

    <ImageView
        android:id="@+id/imgNewsDetailsActivity"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="27dp" />

    <TextView
        android:id="@+id/txtTitleNewsDetailsActivity"
        android:layout_width="236dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="154dp"
        android:text="News title"
        android:textColor="@android:color/background_dark"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/txtContentNewsDetailsActivity"
        android:layout_width="271dp"
        android:layout_height="218dp"
        android:layout_below="@+id/txtTitleNewsDetailsActivity"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:text="News Description"
        android:textColor="@android:color/background_dark"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/txtSourceNewsDetailsActivity"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginBottom="47dp"
        android:text="News source"
        android:textColor="@android:color/background_dark"
        android:textSize="20sp" />



</RelativeLayout>

